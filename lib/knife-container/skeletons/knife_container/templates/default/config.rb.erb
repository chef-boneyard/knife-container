require 'chef-init'

<% if chef_client_mode == "zero" -%>
cookbook_path           ["/chef/cookbooks"]
<% elsif chef_client_mode == "client" -%>
chef_server_url         '<%= chef_server_url %>'
validation_client_name  '<%= validation_client_name %>'
<% end -%>
ssl_verify_mode         :verify_peer

<% if chef_client_mode == "zero" -%>
Ohai::Config[:directory] = "/chef/ohai/plugins"
Ohai::Config[:hints_path] = "/chef/ohai/hints"
<% elsif chef_client_mode == "client" -%>
Ohai::Config[:directory] = "/etc/chef/ohai/plugins"
Ohai::Config[:hints_path] = "/etc/chef/ohai/hints"
<% end -%>
